
.content_wrap {
  position: fixed;
  bottom: -320px;
  left: 0;
  z-index: 2000;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx 24rpx 68rpx;
  width: 100%;
  overflow-y: hidden;
  transition: height 0.5s;
  border-radius: 24rpx 24rpx 0 0;
  background: #fff;
  box-sizing: border-box;

}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.header text {
  font-size: 32rpx;
  font-family: "PingFang SC";
  font-weight: 500;
  color: #333;
  font-style: normal;
}

.header image {
  width: 40rpx;
  height: 40rpx;
}

.mask {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 1999;
  overflow: hidden;
  width: 100vw;
  background: #000;
  color: #fff;
  opacity: 0;
}