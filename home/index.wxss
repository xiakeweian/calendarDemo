.home {
  background: #fff;
  width: 100%;
  height: 100vh;
}
.footer {
  padding: 20rpx;
  width: 100%;
  height: 88rpx;
  font-size: 28rpx;
  font-family: "PingFang SC";
  font-weight: 500;
  border-radius: 24rpx;
  text-align: center;
  color: #fff;
  background: #2A7DFA;
  font-style: normal;
